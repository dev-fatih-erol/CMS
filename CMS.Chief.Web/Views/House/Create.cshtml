@model CreateHouseViewModel
@{
    ViewData["Title"] = "Yeni Hane Oluştur";
}
<div class="container pb-3" style="padding-top:100px">
    <div class="row">
        <div class="mx-auto col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Hane Bilgileri</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="House" method="post" class="form" role="form">
                        <div class="form-group row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Tc Kimlik Numarası</label>
                            <div class="col-lg-9">
                                <input asp-for="IdentificationNumber" class="form-control" type="text">
                                <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Adı</label>
                            <div class="col-lg-9">
                                <input asp-for="Name" class="form-control" type="text">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Soyadı</label>
                            <div class="col-lg-9">
                                <input asp-for="Surname" class="form-control" type="text">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Adresi</label>
                            <div class="col-lg-9">
                                <input asp-for="Address" class="form-control" type="text">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Sayaç Numarası</label>
                            <div class="col-lg-9">
                                <input asp-for="CounterNumber" class="form-control" type="text">
                                <span asp-validation-for="CounterNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-9">
                                <input type="submit" class="btn btn-primary" value="Kaydet">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>