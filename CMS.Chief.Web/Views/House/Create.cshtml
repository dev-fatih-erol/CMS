@model CreateHouseViewModel
@{
    ViewData["Title"] = "Sayaç | Yeni Hane Oluştur";
}
<div id="mapView" class="min"><div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> Loading map...</div></div>
<div id="content" class="max">
    <div class="tables">
        <h4>Yeni Hane Oluştur</h4>
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Hane Bilgileri</div>
                    <div class="panel-body">
                        <form asp-action="Create" asp-controller="House" method="post" class="form-horizontal" role="form">
                            <div class="form-group">
                                <div class="col-sm-2"></div>
                                <div class="col-sm-10">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade in" role="alert">
                                        <div class="icon"><span class="fa fa-ban"></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdentificationNumber" class="col-sm-2 control-label">Kimlik Numarası</label>
                                <div class="col-sm-10">
                                    <input asp-for="IdentificationNumber" class="form-control" type="text" placeholder="Kimlik Numarası">
                                    <span asp-validation-for="IdentificationNumber" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="col-sm-2 control-label">Adı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control" type="text" placeholder="Adı">
                                    <span asp-validation-for="Name" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname" class="col-sm-2 control-label">Soyadı</label>
                                <div class="col-sm-10">
                                    <input asp-for="Surname" class="form-control" type="text" placeholder="Soyadı">
                                    <span asp-validation-for="Surname" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="col-sm-2 control-label">Adres</label>
                                <div class="col-sm-10">
                                    <input asp-for="Address" class="form-control" type="text" placeholder="Adres">
                                    <span asp-validation-for="Address" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="CounterNumber" class="col-sm-2 control-label">Sayaç Numarası</label>
                                <div class="col-sm-10">
                                    <input asp-for="CounterNumber" class="form-control" type="text" placeholder="Sayaç Numarası">
                                    <span asp-validation-for="CounterNumber" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-lg btn-green pull-right" style="outline:none;">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>