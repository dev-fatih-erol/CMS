@model List<CMS.Core.Domain.House>
@{
    ViewData["Title"] = "Dashboard";
}
<div class="container pb-3" style="padding-top:100px">
    <div class="row">
        <div class="mx-auto col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Tüm Haneler</h4>
                </div>
                <div class="card-body">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Kimlik Numarası</th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Adres</th>
                                <th>Sayaç Numarası</th>
                                <th>Kayıt Tarihi</th>
                                <th>Haraketler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var house in Model)
                            {
                                <tr>
                                    <td>@house.IdentificationNumber</td>
                                    <td>@house.Name</td>
                                    <td>@house.Surname</td>
                                    <td>@house.Address</td>
                                    <td>@house.CounterNumber</td>
                                    <td>@house.CreatedDate.ToLongDateString()</td>
                                    <td><a href="/" class="btn btn-primary">Detaylar</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Kimlik Numarası</th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Adres</th>
                                <th>Sayaç Numarası</th>
                                <th>Kayıt Tarihi</th>
                                <th>Haraketler</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>$(document).ready(function () {
            $('#example').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json"
                }
            });
        });</script>
}