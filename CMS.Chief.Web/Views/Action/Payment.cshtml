@model PaymentViewModel
@{
    ViewData["Title"] = "Sayaç | Ödeme";
}

<div id="mapView" class="min"><div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> Loading map...</div></div>
<div id="content" class="max">
    <div class="tables">
        <h4>Ödeme</h4>
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Ödeme Yap</div>
                    <div class="panel-body">
                        <form asp-route-houseId="@ViewContext.RouteData.Values["houseId"]" asp-action="Payment" asp-controller="Action" method="post" class="form-horizontal" role="form">
                            <div class="form-group">
                                <label asp-for="Price" class="col-sm-2 control-label">Fiyat</label>
                                <div class="col-sm-10">
                                    <input asp-for="Price" class="form-control" type="text" placeholder="Fiyat">
                                    <span asp-validation-for="Price" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="col-sm-2 control-label">Açıklama</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Açıklama"></textarea>
                                    <span asp-validation-for="Description" class="help-block"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-lg btn-green pull-right" style="outline:none;">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
@section Scripts {
    <script>$(document).ready(function () {
            $.validator.methods.range = function (value, element, param) {
                var globalizedValue = value.replace(",", ".");
                return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
            }

            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
            }
            $('#Price').maskMoney({ thousands: '.', decimal: ',' });
        });</script>
}